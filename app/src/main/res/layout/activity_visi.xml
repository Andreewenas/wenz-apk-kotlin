<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/ps">

    <!-- Shape untuk Visi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_shape"
        android:elevation="5dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adiwiyata SMKN 2 Yogyakarta"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Logo Adiwiyata -->
        <ImageView
            android:layout_width="450dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:padding="50dp"
            android:src="@drawable/adiwiyata"/>

        <!-- Tombol untuk menuju link -->
        <Button
            android:id="@+id/buttonLink"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Menuju Link"
            android:layout_marginTop="16dp" />

        <!-- Tombol Kembali -->
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Kembali"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</LinearLayout>
